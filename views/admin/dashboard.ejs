<%- include('../partials/admin_header') %>
<div style="padding: 2rem;">
    <h2>Admin Dashboard</h2>
    <div style="display: flex; gap: 1rem; margin-bottom: 2rem;">
        <div style="background: #121212; padding: 1rem; border: 1px solid #333; flex: 1;">
            <h3>Total Images</h3>
            <p style="font-size: 2rem;"><%= stats.imgCount %></p>
        </div>
        <div style="background: #121212; padding: 1rem; border: 1px solid #333; flex: 1;">
            <h3>Bookings</h3>
            <p style="font-size: 2rem;"><%= stats.bookCount %></p>
        </div>
        <div style="background: #121212; padding: 1rem; border: 1px solid #333; flex: 1; display: flex; align-items: center; justify-content: center;">
            <a href="/admin/gallery/upload" class="btn">Upload New Photo</a>
        </div>
    </div>

    <h3>Recent Bookings</h3>
    <table style="width: 100%; border-collapse: collapse; text-align: left;">
        <tr style="border-bottom: 1px solid #333;">
            <th style="padding: 10px;">Name</th>
            <th>Email</th>
            <th>Status</th>
        </tr>
        <% bookings.forEach(book => { %>
            <tr style="border-bottom: 1px solid #222;">
                <td style="padding: 10px;"><%= book.name %></td>
                <td><%= book.email %></td>
                <td><%= book.status %></td>
            </tr>
        <% }) %>
    </table>
</div>
<%- include('../partials/footer') %>