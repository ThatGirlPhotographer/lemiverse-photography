<%- include('../partials/header') %>

<div style="height: 60vh; display: flex; align-items: center; justify-content: center;">
    <form action="/admin/reset-password" method="POST" style="width: 300px;">
        <h2>Reset Password</h2>
        
        <% if (error) { %> 
            <p style="color: red;"><%= error %></p> 
        <% } %>
        
        <% if (success) { %> 
            <p style="color: #00ffcc;"><%= success %></p> 
        <% } %>

        <input type="password" name="newPassword" placeholder="New Password" required>
        <input type="password" name="confirmPassword" placeholder="Confirm New Password" required>
        
        <button type="submit" class="btn" style="width: 100%;">Update Password</button>
        
        <div style="margin-top: 15px; text-align: center;">
            <a href="/admin/dashboard" style="color: #aaa; font-size: 0.8rem; text-decoration: none;">&larr; Back to Dashboard</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>