<%- include('../partials/header') %>

<style>
  @import url(https://fonts.googleapis.com/css?family=Lato:100,300,400);

  /* --- WRAPPER --- */
  .minimal-box-form {
    background-color: #000 !important;
    color: #fff;
    padding: 50px 0;
    min-height: 80vh;
    font-family: 'Lato', sans-serif;
    overflow-x: hidden; 
  }

  .minimal-box-form header {
    position: relative;
    margin: 20px 0 10px 0;
    font-size: 2.3em;
    text-align: center;
    letter-spacing: 7px;
    color: #ffffff;
    font-weight: 300;
    text-transform: uppercase;
  }

  .minimal-box-form .subtext {
    text-align: center;
    color: #aaa;
    font-size: 0.9rem;
    letter-spacing: 1px;
    margin-bottom: 40px;
    max-width: 600px;
    padding: 0 20px; 
    margin-left: auto;
    margin-right: auto;
  }

  /* --- FORM CONTAINER --- */
  .minimal-box-form #form {
    position: relative;
    width: 90%; 
    max-width: 500px; 
    margin: 0 auto 50px auto;
  }

  /* --- INPUTS & TEXTAREA SHARED --- */
  .minimal-box-form input, 
  .minimal-box-form textarea,
  .minimal-box-form #submit {
      box-sizing: border-box;
      width: 100%; 
      display: block; /* KEY FIX: Removes the gap caused by inline spacing */
      border-radius: 0; /* Ensures corners match perfectly */
  }

  .minimal-box-form input, 
  .minimal-box-form textarea {
    font-family: 'Lato', sans-serif;
    font-size: 0.875em;
    background: transparent !important;
    outline: none;
    color: #ffffff !important;
    border: solid 1px #ffffff !important;
    transition: all 0.3s ease-in-out;
    padding: 15px; 
    
    /* MERGE BORDERS: Pulls the next element up by 1px to overlap borders */
    margin: 0;
    margin-bottom: -1px; 
  }

  .minimal-box-form input {
    height: 50px;
  }

  .minimal-box-form textarea {
    height: 110px;
    max-height: 110px;
    resize: none; 
  }

  /* --- CUSTOM SCROLLBAR (The Fix) --- */
  /* For Chrome, Safari, Edge */
  .minimal-box-form textarea::-webkit-scrollbar {
    width: 8px;
  }

  .minimal-box-form textarea::-webkit-scrollbar-track {
    background: #000; /* Track color (Black) */
    border-left: 1px solid #333;
  }

  .minimal-box-form textarea::-webkit-scrollbar-thumb {
    background-color: #333; /* Handle color (Dark Grey) */
    border: 1px solid #000; /* Adds a tiny border around handle */
  }

  .minimal-box-form textarea::-webkit-scrollbar-thumb:hover {
    background-color: #fff; /* White when you grab it */
  }

  /* For Firefox */
  .minimal-box-form textarea {
    scrollbar-width: thin;
    scrollbar-color: #333 #000;
  }

  /* --- HOVER EFFECTS --- */
  .minimal-box-form input:hover, 
  .minimal-box-form textarea:hover {
    background: #1a1a1a !important;
    color: #fff;
    /* Ensure z-index is higher so borders don't get covered by the next item */
    position: relative; 
    z-index: 10;
  }

  /* --- BUTTON STYLING --- */
  .minimal-box-form #submit {
    padding: 15px 0; 
    /* The negative margin on the textarea handles the top connection */
    margin-top: 0; 
    
    font-family: 'Lato', sans-serif;
    font-size: 0.875em;
    color: #ffffff !important;
    outline: none;
    cursor: pointer;
    border: solid 1px #ffffff !important;
    background: transparent !important;
    font-weight: bold;
    letter-spacing: 2px;
    transition: all 0.3s ease-in-out;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
  }

  .minimal-box-form #submit:hover {
    background: #ffffff !important;
    color: #000000 !important;
    position: relative;
    z-index: 10;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
  }

  .minimal-box-form ::placeholder { color: #888; opacity: 1; }

  /* --- FOOTER --- */
  .minimal-box-form .connect-footer {
    width: 90%; 
    max-width: 500px;
    margin: 0 auto;
    border-top: 1px solid #333;
    padding-top: 2rem;
    text-align: center;
  }

  .minimal-box-form .connect-footer h3 {
    margin-bottom: 10px;
    font-weight: 300;
    letter-spacing: 2px;
    font-size: 1.2rem;
  }

  .minimal-box-form .connect-footer p {
    color: #aaa;
    font-size: 0.9em;
  }
</style>

<div class="minimal-box-form">

  <header>Get In Touch</header>
  
  <p class="subtext">
    Interested in working together? Fill out the form below. I'll get back to you as soon as possible!
  </p>

  <% if (typeof settings !== 'undefined' && settings.contact_success) { %> 
    <div style="width: 90%; max-width: 500px; margin: 0 auto 20px auto; text-align: center; color: #4ade80; border: 1px solid #4ade80; padding: 10px; box-sizing: border-box;">
        Message sent successfully!
    </div>
  <% } %>

  <form id="form" class="topBefore" action="/contact" method="POST">
      
      <input id="name" name="name" type="text" placeholder="NAME" style="border-top-left-radius: 5px; border-top-right-radius: 5px;" required>
      
      <input id="email" name="email" type="text" placeholder="E-MAIL" required>
      
      <textarea id="message" name="message" placeholder="MESSAGE" required></textarea>
      
      <input id="submit" type="submit" value="GO!">
  
  </form>

  <div class="connect-footer">
      <h3>Connect</h3>
      <p>Email: <%= settings.contact_email %></p>
  </div>

</div>

<%- include('../partials/footer') %>