<%- include('../partials/header') %>

<style>
    :root {
        --dark: #0a0a0a;
        --accent: #ffffff;
        --gold: #c5a059;
    }

    .cinematic-hero {
        position: relative;
        /* FIXED: Changed from 140vh to 100vh to remove the huge gap */
        height: 100vh; 
        background: var(--dark);
        overflow: hidden;
    }

    .hero-bg-wrapper {
        /* FIXED: Removed 'sticky' to allow footer to sit right under the image */
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
        /* Professional fade-out mask */
        mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
    }

    .hero-image {
        position: absolute;
        width: 100%;
        height: 100%;
        background-image: url('http://www.pixeden.com/media/k2/galleries/343/002-city-vector-background-town-vol2.jpg');
        background-size: cover;
        background-position: center;
        filter: brightness(0.5) grayscale(20%);
    }

    .hero-content {
        position: absolute;
        top: 30%; /* Balanced height */
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        text-align: center;
        width: 100%;
        max-width: 100vw;
        box-sizing: border-box;
        padding: 0 20px;
    }

    .eyebrow {
        font-size: 0.7rem;
        letter-spacing: 0.4rem;
        color: var(--gold);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
    }

    .main-title {
        font-size: clamp(1.8rem, 8vw, 5rem);
        line-height: 1.0;
        font-weight: 800;
        color: var(--accent);
        text-transform: uppercase;
        margin: 0 auto;
        min-height: 1.8em; 
        display: block;
        width: 100%;
    }

    .dynamic-txt {
        font-family: serif; 
        font-style: italic;
        font-weight: 300;
        color: var(--gold);
    }

    .hero-footer {
        margin-top: 1.5rem;
        display: block;
        width: 100%;
        text-align: center;
    }

    .btn {
        padding: 1rem 2rem;
        border: 1px solid rgba(255,255,255,0.4);
        color: var(--accent);
        text-decoration: none;
        letter-spacing: 0.15rem;
        font-size: 0.75rem;
        transition: all 0.4s ease;
        background: transparent;
        display: inline-block;
        text-transform: uppercase;
        box-sizing: border-box;
        max-width: calc(100vw - 40px); 
    }

    .btn:hover {
        background: var(--accent);
        color: var(--dark);
    }

    @media (max-width: 480px) {
        .hero-content {
            top: 25%;
        }
        .main-title {
            font-size: 1.7rem;
        }
    }
</style>

<div class="cinematic-hero">
    <div class="hero-bg-wrapper">
        <div class="hero-image"></div>
    </div>
    
    <div class="hero-content">
        <p class="eyebrow">PORTFOLIO BY LEMI â€” 2026</p>
        <h1 class="main-title">
            CAPTURING THE <br>
            <span class="dynamic-txt" id="typewriter">&nbsp;</span>
        </h1>
        <div class="hero-footer">
            <a href="/gallery" class="btn">VIEW WORK</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

<script>
const words = ["UNSEEN", "AUTHENTIC", "MOMENTS", "STORY", "EMOTIONS"];
let wordIdx = 0;
let charIdx = 0;
let isDeleting = false;

function typeEffect() {
    const el = document.getElementById("typewriter");
    if (!el) return;
    const currentFullWord = words[wordIdx];

    if (isDeleting) { charIdx--; } 
    else { charIdx++; }

    const currentDisplay = currentFullWord.substring(0, charIdx);
    el.innerHTML = currentDisplay || "&nbsp;";

    let typingSpeed = isDeleting ? 70 : 150;

    if (!isDeleting && charIdx === currentFullWord.length) {
        typingSpeed = 2000; 
        isDeleting = true;
    } else if (isDeleting && charIdx === 0) {
        isDeleting = false;
        wordIdx = (wordIdx + 1) % words.length;
        typingSpeed = 500;
    }
    setTimeout(typeEffect, typingSpeed);
}

document.addEventListener("DOMContentLoaded", () => {
    setTimeout(typeEffect, 800); 
});
</script>