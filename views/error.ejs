<%- include('partials/header') %>

<style>
    .gallery-error {
        height: 100vh;
        background: var(--dark);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    /* Viewfinder "Corners" */
    .viewfinder-frame {
        position: absolute;
        width: 80%;
        height: 70%;
        max-width: 1000px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        pointer-events: none;
    }

    /* Minimalist Corner Accents */
    .viewfinder-frame::before, .viewfinder-frame::after {
        content: "";
        position: absolute;
        width: 20px; height: 20px;
        border: 1px solid var(--gold);
    }
    .viewfinder-frame::before { top: -1px; left: -1px; border-right: 0; border-bottom: 0; }
    .viewfinder-frame::after { bottom: -1px; right: -1px; border-left: 0; border-top: 0; }

    .error-wrap {
        text-align: center;
        padding: 40px;
        z-index: 10;
    }

    .status-badge {
        font-size: 0.65rem;
        letter-spacing: 0.5rem;
        color: var(--gold);
        text-transform: uppercase;
        margin-bottom: 2rem;
        display: block;
        opacity: 0.7;
    }

    .main-err-title {
        font-size: clamp(1.8rem, 8vw, 3.5rem);
        font-weight: 800;
        color: var(--accent);
        letter-spacing: 0.3rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
    }

    .description-italic {
        font-family: serif;
        font-style: italic;
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.5);
        max-width: 450px;
        margin: 0 auto 3rem auto;
        line-height: 1.6;
    }

    .nav-hint {
        display: inline-block;
        padding: 12px 30px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: var(--accent);
        text-decoration: none;
        font-size: 0.7rem;
        letter-spacing: 0.2rem;
        transition: all 0.4s ease;
        text-transform: uppercase;
    }

    .nav-hint:hover {
        border-color: var(--gold);
        color: var(--gold);
        background: rgba(197, 160, 89, 0.05);
    }
</style>

<div class="gallery-error">
    <div class="viewfinder-frame"></div>

    <div class="error-wrap">
        <span class="status-badge">ERROR // <%= errorCode %></span>
        
        <h1 class="main-err-title"><%= errorTitle %></h1>
        
        <p class="description-italic">
            "<%= errorDesc %>"
        </p>

        <a href="/" class="nav-hint">Return to Gallery</a>
    </div>
</div>

<%- include('partials/footer') %>